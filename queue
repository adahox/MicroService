<?php

require "./vendor/autoload.php";
require "./src/bootstrap.php";

use App\Facades\Rabbit;

try {
    if ($argc <= 1) {
        throw new \Error("We need to implement '-h' command here.");
    }

    [$process, $queueName] = explode(":", $argv[1]);

    Rabbit::{$process}($queueName);

} catch (\Exception $e)
{
   echo $e->getMessage();
}
